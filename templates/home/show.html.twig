{% extends "base.html.twig" %}

{% block body %}
    <div class="container">
        <div class="section">
            <div class="row">
                <div class="col s12 m12">
                    {# <h1>Votre voiture avec l'id : {{ car.id }}</h1> #}
                    <h2>Modèle : {{ car.model }}</h2>
                    <h2>Prix : {{ car.price }} €</h2>
                    {% if car.image.name is defined %}
                        <img src="{{ asset('images/')~car.image.name }}"
                    {% else %}
                        <p>Pas d'image</p>
                    {% endif %}

                    {% for keyword in car.keywords %}
                        <span>{{ keyword.name }} {% if not loop.last %}, {% endif %}</span>
                    {% endfor %}

                    {% if car.cities |length > 0 %}
                    <p>Voiture disponible à : {% for city in car.cities %}<a class="btn btn-primary btn-sm my-4">{{ city.name }}</a>{% endfor %}</p>
                    {% endif %}
                    <a href="{{ path("home") }}">Accueil</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
