{% extends "base.html.twig" %}

{% block body %}
    <div class="container">
        <div class="section">
            <div class="row">
                <div class="col s12 m12">
                    <h1 class="my-4">Ajout de voiture</h1>
                    {% include 'home/form.html.twig' %}
                    <button class="addKeyword btn btn-outline-primary my-4">Ajouter un mot clé ?</button>
                    <button type="submit" name="action" class="btn btn-outline-primary my-4">Sauvegarder</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{# block js pour les keywords  #}
{% block javascript %}

{{ parent() }}

<script src="//ajax.googleapis.com//libs/jquery/1.11.1/jquery.min.js"></script>

<script>

$(document).ready(function(){
    var $container = $('#car_keywords');

    // récupère le nombre d'input
    var index = $container.find(':input').length;

    if(index == 0) {
        addKeyword($container);
    }

    $('.addKeyword').click(function(e) {
        e.preventDefault();

        addKeyword($container);
    })

    function addKeyword($container) {

        var template = $container.attr('data-prototype')
        .replace(/__name__label__/g, 'Mot clé n°' + (index + 1))
        .replace(/__name/g, index)
        ;

        var $prototype = $(template);

        $container.append($prototype);

        index ++;
    }
});

</script>
{% endblock %}